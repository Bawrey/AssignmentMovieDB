<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieDBAssignment" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#04b4e3</item>
        <item name="colorPrimaryVariant">#04b4e3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="outline_for_text_head" parent="Widget.AppCompat.TextView">
        <item name="android:shadowRadius">1.6</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="outline_for_text_body" parent="Widget.AppCompat.TextView">
        <item name="android:shadowRadius">1.6</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>